<div class="news-list">
  <div class="news-info col-xs-12 col-sm-12 col-md-11">
    <dl>
      <dt>
        <a href="{{path('knowledge_detail',{id:knowledge.id})}}" target="_blank" > <i class="{% if knowledge.type == 'link' %}fa fa-link{% else %}fa fa-sticky-note-o{% endif %}"></i>
          &nbsp;&nbsp;{{knowledge.title}}
        </a>
      </dt>
      <span style="float:right">
        <a class="btn btn-default fa fa-trash delete-favorite" data-url="{{path('knowledge_unfavorite', {id:knowledge.id})}}"></a>
      </span>
      <dd>
        <span class="name">
          <a href="{{ path('user_page',{userId:knowledge.userId}) }}"  rel="author"> <i class="fa fa-fw fa-user"></i>
            {{user.username}}
          </a>
        </span>
        <span class="identity"></span>
        <span class="time">{# 创建日期:{{knowledge.createdTime |date('Y年m月d日') }} #}</span>
      </dd>
      <dd class="text" style="padding-left:19px;">
        <i class="fa fa-fw fa-book"></i>
        摘要：{{knowledge.summary}}
      </dd>
    </dl>
    <div class="news_bot col-sm-7 col-md-8" style="padding-left:19px;">
      {% for tag in knowledgeTag %}
      <span class="tags visible-lg visible-md">
        <a href="javascript:;">{{tag.text}}</a>
      </span>
      {% endfor %}
      <div class="pull-right">
        <span>
          <i class="fa fa-fw fa-eye"></i>
          已被{{knowledge.viewNum}}人学习
        </span>
      </div>
    </div>
  </div>
</div>