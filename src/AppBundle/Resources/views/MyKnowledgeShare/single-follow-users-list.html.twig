<div class="news-list">
  <div class="news-info col-xs-12 col-sm-12 col-md-11">
    <dl>
      <dd>
        <h3 class="box-title"><a href="{{path('user_page',{id:user.id})}}">{{ user.username }}</a></h3>
      </dd>
    </dl>
    <div class="news_bot col-sm-7 col-md-8">
      <span class="look">
        <a class="pull-right" id="follow-btn" data-url="{{path('user_follow',{id:user.id})}}"{% if hasfollowed is defined and hasfollowed == true %}style="display:none"{% endif %}><i class="fa fa-fw fa-heart-o"></i></a>
        <a class="pull-right" id="unfollow-btn" data-url="{{path('user_unfollow',{id:user.id})}}"{% if hasfollowed is defined and hasfollowed == false %}style="display:none"{% endif %}><i class="fa fa-fw fa-heart"></i></a>
      </span>
    </div>
  </div>
</div>