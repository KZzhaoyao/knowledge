<link rel="stylesheet" href="{{ asset('bundles/app/css/toplist.css') }}">
<div class="top-user">
  <div class="box">
    <div class="box-header">
      <h3 class="box-title">用户排行</h3>

      <div class="box-tools">
        <ul class="pagination pagination-sm no-margin pull-right">
          <li class="active" id="score-user"><a>Ｓ</a></li>
          <li id="knowledge-user"><a><i class="fa fa-fw fa-eye"></i></a></li>
          <li id="browse-user"><a><i class="fa fa-fw fa-file-o"></i></a></li>
        </ul>
      </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body no-padding">
      <table class="table list-top"  id="score-user-list">
        {% for scoreUser in scoreUsers %}
          <tr>
            <td>{{loop.index}}</td>
            <td><a href="{{ path('user_page',{userId:scoreUser.id}) }}"  rel="author">{{scoreUser.username |slice(0,12)}}</a></td>
            <td><i class="fa fa-fw fa-usd"></i>{{scoreUser.score}}</td>
          </tr>
        {% endfor %}
      </table>
      <table class="table list-top" id="knowledge-user-list" style="display:none">
        {% for knowledgeUser in knowledgeUsers %}
          <tr>
            <td>{{loop.index}}</td>
            <td><a href="{{ path('user_page',{userId:knowledgeUser.id}) }}"  rel="author">{{knowledgeUser.username |slice(0,12)}}</a></td>
            <td><i class="fa fa-fw fa-eye"></i>{{knowledgeUser.browseNum}}</td>
          </tr>
        {% endfor %}
      </table>
      <table class="table list-top" id="browse-user-list" style="display:none">
        {% for browseUser in browseUsers %}
          <tr>
            <td>{{loop.index}}</td>
            <td><a href="{{ path('user_page',{userId:browseUser.id}) }}"  rel="author">{{browseUser.username |slice(0,12)}}</a></td>
            <td><i class="fa fa-fw fa-file-o"></i>{{browseUser.knowledgeNum}}</td>
          </tr>
        {% endfor %}
      </table>
    </div>
    <!-- /.box-body -->
  </div>
</div>
{% block javascripts %}
    {% for path in script()  %}
    <script src="{{ asset( 'assets/' ~ path) }}"></script>
    {% endfor %}
    <script src="{{ asset('bundles/app/js/toplist/toplist.js') }}"></script>
{% endblock %}