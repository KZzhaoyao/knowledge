<div class="news-list">
  <div class="news-info col-xs-12 col-sm-12 col-md-11">
    <dl>
      <dt>
        <a href="{{path('knowledge_detail',{id:knowledge.id})}}" target="_blank" ><i class="{% if knowledge.type == 'link' %}fa fa-link{% else %}fa fa-sticky-note-o{% endif %}"></i>&nbsp;{{knowledge.title}}
        </a>
      </dt>
      <span style="float:right;padding:0px;">
        <a class="btn  pull-center" id="create-todo-btn" data-url="{{ path('user_create_toread', {id:knowledge.id}) }}" {% if knowledge.learned is defined and knowledge.learned == true %}style="display:none"{% endif %}><i class="glyphicon glyphicon-pushpin"></i><span>加入待读列表</span></a>
        <a class="btn pull-right" {% if knowledge.learned is not defined %}style="display:none;disable:true;"{% endif %}><i class="fa fa-fw fa-thumb-tack"></i><span>该知识已学习</span></a>
      </span>
      <dd>
        <span class="name">
          <a href="{{ path('user_page',{userId:knowledge.userId}) }}"  rel="author"><i class="fa fa-fw fa-user"></i>{{user.username}}</a>
        </span>
        <span class="identity"></span>
        {# <span class="time">创建日期:{{knowledge.createdTime |date('Y年m月d日') }}</span> #}
      </dd>
      <dd class="text" style="padding-left:19px;"><i class="fa fa-fw fa-book"></i>摘要：{{knowledge.summary}}</dd>
    </dl>
    <div class="news_bot col-sm-7 col-md-8">
      {% for tag in knowledgeTag %}
        <span class="tags visible-lg visible-md">
          <a href="javascript:;">{{tag.text}}</a>
        </span>
      {% endfor %}
    </div>
    <div class="pull-right">
        <span>
          <i class="fa fa-fw fa-eye"></i>已被{{knowledge.viewNum}}人学习
        </span>
    </div>
  </div>
</div>


