{% extends 'AppBundle::modal-base.html.twig'%}
{% block title %}
  编辑知识
{% endblock %}
{% block body %}
  <form id="admin-edit-form" action="{{path('admin_knowledge_edit',{id:knowledge.id})}}" method="post" class="form-horizontal">
    <div class="form-group">
      <label for="title" class="col-sm-3 control-label">标题</label>
      <div class="col-md-6 controls">
        <input type="text" class="form-control" id="title" name="title" value="{{knowledge.title}}">
      </div>
    </div>
    <div class="form-group">
      <label for="summary" class="col-sm-3 control-label">摘要</label>
      <div class="col-md-6 controls">
        <input type="text" class="form-control" id="summary" name="summary" value="{{knowledge.summary}}">
      </div>
    </div>
    <div class="form-group">
      <label for="summary" class="col-sm-3 control-label">主题</label>
      <div class="col-sm-6">
        <p class="form-control-static">{{topic.name}}</p>
      </div>
    </div>
    <div class="form-group">
      <label for="summary" class="col-sm-3 control-label">标签</label>
      <div class="col-sm-6">
        <p class="form-control-static ">{% for tag in tags %}
          {{tag.text}}&nbsp&nbsp&nbsp{% endfor %}</p>
      </div>
    </div>
  </form>
{% endblock %}
{% block footer %}
  <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
  <button type="submit" id="admin-edit-btn" class="btn btn-primary pull-right" data-toggle="form-submit" data-target="#admin-edit-form" data-submiting-text="正在提交">保存</button>
{% endblock %}  