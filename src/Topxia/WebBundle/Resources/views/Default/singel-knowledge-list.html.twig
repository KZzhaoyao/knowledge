<div class="news-list">
  <div class="news-info col-xs-12 col-sm-12 col-md-11">
    <dl>
      <dt>
        <a href="{{path('knowledge_detail',{id:userKnowledge.id})}}" target="_blank" > {{userKnowledge.title}}
          <i class="{% if userKnowledge.type == 'link' %}fa fa-link{% else %}fa fa-sticky-note-o{% endif %}">

          </i>
        </a>
      </dt>
      <dd>
        <span class="name">
          <a href="{{ path('user_page',{id:userKnowledge.id}) }}"  rel="author">创建者:{{userKnowledge.userName}}</a>
        </span>
        <span class="identity"></span>
        <span class="time">
          创建日期:{{userKnowledge.createdTime |date('Y年m月d日') }}
        </span>
      </dd>
      <dd class="text">{{userKnowledge.summary}}</dd>
    </dl>
    <div class="news_bot col-sm-7 col-md-8">
      <span class="tags visible-lg visible-md">
        <a href="javascript:;">技术贴</a>
        <a href="javascript:;">PHP</a>
      </span>
      <span class="look">
        <a class="pull-center" id="collect-btn" data-url="{{ path('MyKnowledge_addCollection', {knowledgeId:userKnowledge.id}) }}" data-id="{{userKnowledge.id}}" {% if userKnowledge.hasCollected %}style="display:none"{% endif %}><i class="fa fa-fw fa-heart-o"></i><span id="collect-num-{{userKnowledge.id}}">{{userKnowledge.collectNum}}</span></a >
        <a class="pull-right" id="uncollect-btn" data-url="{{ path('MyKnowledge_delCollection', {knowledgeId:userKnowledge.id}) }}" {% if not userKnowledge.hasCollected %}style="display:none"{% endif %}><i class="fa fa-fw fa-heart"></i><span id="uncollect-num-{{userKnowledge.id}}">{{userKnowledge.collectNum}}</span></a>
      </span>
    </div>
  </div>
</div>
