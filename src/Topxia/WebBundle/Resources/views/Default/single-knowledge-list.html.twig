<div class="news-list">
  <div class="news-info col-xs-12 col-sm-12 col-md-11">
    <dl>
      <dt>
        <a href="{{path('knowledge_detail',{id:knowledge.id})}}" target="_blank" ><i class="{% if knowledge.type == 'link' %}fa fa-link{% else %}fa fa-sticky-note-o{% endif %}"></i>&nbsp;&nbsp;{{knowledge.title}}
        </a>
      </dt>
      <span style="float:right">
        <a class="btn  pull-center" id="create-todo-btn" data-url="{{ path('user_create_toread', {id:knowledge.id}) }}" ><i class="glyphicon glyphicon-pushpin"></i><span>加入待读列表</span></a>
        <a class="btn pull-right" id="delete-todo-btn" data-url="{{ path('user_delete_toread', {id:knowledge.id}) }}" style="display:none"><i class="fa fa-fw fa-thumb-tack"></i><span></span></a>
      </span>
      <dd>
        <span class="name">
          <a href="{{ path('user_page',{id:knowledge.userId}) }}"  rel="author">创建者:{{user.username}}</a>
        </span>
        <span class="identity"></span>
        <span class="time">创建日期:{{knowledge.createdTime |date('Y年m月d日') }}</span>
      </dd>
      <dd class="text">{{knowledge.summary}}</dd>
    </dl>
    <div class="news_bot col-sm-7 col-md-8">
      <span class="tags visible-lg visible-md">
        <a href="javascript:;">技术贴</a>
        <a href="javascript:;">PHP</a>
      </span>
    </div>
    <div class="pull-right">
      <span>
        浏览量:{{knowledge.pageView}}
      </span>
    </div>
  </div>
</div>

