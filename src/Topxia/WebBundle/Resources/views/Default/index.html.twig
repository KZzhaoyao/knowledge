{% extends 'TopxiaWebBundle::base.html.twig' %}
{% block left_header %}
    {% include 'TopxiaWebBundle::left-header.html.twig' %}
{% endblock %}
{% block base_content %}
    <div class="content">
        <div class="content-block new-content">
            {% block navTabs %}
                <ul class="nav nav-tabs">
                    <li role="newknowledge" class="active"><a href="{{path('homepage')}}">最新知识</a></li>
                    <li role="myconcern"><a href="#timeline">我的关注<span style="color:#f00">999+</span></a></li>
                    <li role="topic"><a href="{{path('topic')}}">主题</a></li>
                </ul>
                <br>
            {% endblock %}
            <div class="row" id="knowledge-list">
                <div class="col-md-8 col-md-offset-2">
                    <h1 class="text-center">首页登录</h1>
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">当前登陆用户</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">
                                    {% if app.user %}
                                        {{ app.user.username }} ! <a href="{{ path('logout') }}">退出</a>
                                    {% else %}
                                        未登陆
                                    {% endif %}
                                </p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">登陆演示</label>
                            <div class="col-sm-10">
                                <a href="{{ path('login') }}" class="btn btn-sm btn-default">登陆</a>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">注册演示</label>
                            <div class="col-sm-10">
                                <a href="{{ path('register') }}" class="btn btn-sm btn-default">注册</a>
                            </div>
                        </div>

                    </form>

                </div>
                {#{% if knowledges is defined and knowledges %}#}
                    {#{% for knowledge in knowledges %}#}
                        {#{% set user = users[knowledge.userId]|default(null) %}#}
                        {#{% include "TopxiaWebBundle:Default:single-knowledge-list.html.twig" %}#}
                    {#{% endfor %}#}
                {#{% else %}#}
                    {#<div class="panel-title"><h4 align="center">---暂无分享记录---</h4></div>#}
                {#{% endif %}#}
            </div>
            {#{{ web_macro.paginator(paginator) }}#}
        </div>
    </div>
{% endblock %}
{% block aside %}
    {% include 'TopxiaWebBundle::aside.html.twig' %}
{% endblock %}