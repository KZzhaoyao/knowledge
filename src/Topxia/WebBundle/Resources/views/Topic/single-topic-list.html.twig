<div class="news-list">
  <div class="news-info col-xs-12 col-sm-12 col-md-11">
    <dl>
      <dd>
          <h3 class="box-title"><a href="javascript:;">{{ topic.name }}</a></h3>
          <span class="time">
            创建日期:{{ topic.createdTime |date('Y年m月d日') }}
          </span>
      </dd>
    </dl>
    <div class="news_bot col-sm-7 col-md-8">
      <span class="look">
        <a class="pull-right" id="follow-btn" data-url="{{ path('topic_follow', {id:topic.id}) }}" {% if topic.hasFollowed is defined and topic.hasFollowed%}style="display:none"{% endif %}><i class="fa fa-fw fa-heart-o"></i><span>{{ topic.followNum }}</span></a>
        <a class="pull-right" id="unfollow-btn" data-url="{{ path('topic_unfollow', {id:topic.id}) }}" {% if topic.hasFollowed is defined and not topic.hasFollowed%}style="display:none"{% endif %}><i class="fa fa-fw fa-heart"></i><span>{{ topic.followNum }}</span></a>
      </span>
    </div>
  </div>
</div>